<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/d160"
        android:layout_height="@dimen/d90"
        android:id="@+id/HisVideoImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginBottom="@dimen/d14"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/HisVideoName"
        app:layout_constraintLeft_toRightOf="@id/HisVideoImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/HisVideoImg"
        app:layout_constraintBottom_toBottomOf="@id/HisVideoImg"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"/>

</androidx.constraintlayout.widget.ConstraintLayout>