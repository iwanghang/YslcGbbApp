<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:id="@+id/KLineRecoItemImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginBottom="@dimen/d14"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/KLineRecoItemTitle"
        app:layout_constraintLeft_toRightOf="@id/KLineRecoItemImg"
        app:layout_constraintTop_toTopOf="@id/KLineRecoItemImg"
        app:layout_constraintBottom_toTopOf="@id/KLineRecoItemRead"
        app:layout_constraintRight_toLeftOf="@id/KLineRecoItemLearn"
        android:layout_marginRight="@dimen/d14"
        android:layout_marginLeft="@dimen/d14"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:lines="2"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLineRecoItemLearn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/KLineRecoItemTitle"
        android:layout_marginRight="@dimen/d14"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_999"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d2"
        android:paddingBottom="@dimen/d2"
        android:text="已学习"
        android:background="@drawable/gray_radius_10_shape"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLineRecoItemRead"
        app:layout_constraintLeft_toLeftOf="@id/KLineRecoItemTitle"
        app:layout_constraintTop_toBottomOf="@id/KLineRecoItemTitle"
        app:layout_constraintBottom_toBottomOf="@id/KLineRecoItemImg"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLineRecoItemReadTag"
        app:layout_constraintLeft_toRightOf="@id/KLineRecoItemRead"
        app:layout_constraintTop_toTopOf="@id/KLineRecoItemRead"
        app:layout_constraintBottom_toBottomOf="@id/KLineRecoItemRead"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        android:text="已阅读"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLineRecoItemPraise"
        app:layout_constraintLeft_toRightOf="@id/KLineRecoItemReadTag"
        app:layout_constraintTop_toTopOf="@id/KLineRecoItemRead"
        app:layout_constraintBottom_toBottomOf="@id/KLineRecoItemRead"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        android:layout_marginLeft="@dimen/d14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLineRecoItemPraiseTag"
        app:layout_constraintLeft_toRightOf="@id/KLineRecoItemPraise"
        app:layout_constraintTop_toTopOf="@id/KLineRecoItemRead"
        app:layout_constraintBottom_toBottomOf="@id/KLineRecoItemRead"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        android:text="@string/Praise"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/KLineRecoItemLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_F7" />

</androidx.constraintlayout.widget.ConstraintLayout>