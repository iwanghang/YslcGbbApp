<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d48"
        android:id="@+id/MyOpBelongBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyOpBelong"
        app:layout_constraintLeft_toLeftOf="@id/MyOpBelongBg"
        app:layout_constraintRight_toRightOf="@id/MyOpBelongBg"
        app:layout_constraintTop_toTopOf="@id/MyOpBelongBg"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        android:text="所属板块"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="@id/MyOpBelongBg"/>

    <View
        android:layout_width="@dimen/d104"
        android:layout_height="0dp"
        android:id="@+id/MyOpNorthBg"
        app:layout_constraintLeft_toRightOf="@id/MyOpBelongBg"
        app:layout_constraintTop_toTopOf="@id/MyOpBelongBg"
        app:layout_constraintBottom_toBottomOf="@id/MyOpBelongBg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyOpNorth"
        app:layout_constraintLeft_toLeftOf="@id/MyOpNorthBg"
        app:layout_constraintRight_toRightOf="@id/MyOpNorthBg"
        app:layout_constraintTop_toTopOf="@id/MyOpNorthBg"
        app:layout_constraintBottom_toBottomOf="@id/MyOpNorthBg"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_666"
        android:text="北资持股" />
    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="wrap_content"
        android:id="@+id/MyOpNorthImg"
        app:layout_constraintRight_toRightOf="@id/MyOpNorthBg"
        app:layout_constraintLeft_toRightOf="@id/MyOpNorth"
        app:layout_constraintTop_toTopOf="@id/MyOpNorth"
        app:layout_constraintBottom_toBottomOf="@id/MyOpNorth"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/question" />

    <View
        android:layout_width="@dimen/d104"
        android:layout_height="0dp"
        android:id="@+id/MyOpFinanceBg"
        app:layout_constraintLeft_toRightOf="@id/MyOpNorthBg"
        app:layout_constraintTop_toTopOf="@id/MyOpBelongBg"
        app:layout_constraintBottom_toBottomOf="@id/MyOpBelongBg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyOpFinance"
        app:layout_constraintLeft_toLeftOf="@id/MyOpFinanceBg"
        app:layout_constraintRight_toRightOf="@id/MyOpFinanceBg"
        app:layout_constraintTop_toTopOf="@id/MyOpFinanceBg"
        app:layout_constraintBottom_toBottomOf="@id/MyOpFinanceBg"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_666"
        android:text="融资持股" />
    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="wrap_content"
        android:id="@+id/MyOpFinanceImg"
        app:layout_constraintRight_toRightOf="@id/MyOpFinanceBg"
        app:layout_constraintLeft_toRightOf="@id/MyOpFinance"
        app:layout_constraintTop_toTopOf="@id/MyOpFinance"
        app:layout_constraintBottom_toBottomOf="@id/MyOpFinance"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/question" />

    <View
        android:layout_width="@dimen/d80"
        android:layout_height="0dp"
        android:id="@+id/MyOpNetProfitBg"
        app:layout_constraintLeft_toRightOf="@id/MyOpFinanceBg"
        app:layout_constraintTop_toTopOf="@id/MyOpBelongBg"
        app:layout_constraintBottom_toBottomOf="@id/MyOpBelongBg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MyOpNetProfit"
        app:layout_constraintLeft_toLeftOf="@id/MyOpNetProfitBg"
        app:layout_constraintRight_toRightOf="@id/MyOpNetProfitBg"
        app:layout_constraintTop_toTopOf="@id/MyOpNetProfitBg"
        app:layout_constraintBottom_toBottomOf="@id/MyOpNetProfitBg"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_666"
        android:text="净利润率" />
</androidx.constraintlayout.widget.ConstraintLayout>