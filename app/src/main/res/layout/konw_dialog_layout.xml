<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_radius_10_shape">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/NormalDialogText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/NormalDialogLine"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="@dimen/d36"
        android:layout_marginBottom="@dimen/d36"
        android:gravity="center"/>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/NormalDialogLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/NormalDialogKnow"
        android:background="@color/gray_F7" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/NormalDialogKnow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/s16"
        android:textColor="@color/black_333"
        android:text="知道了"
        android:gravity="center"
        android:paddingTop="@dimen/d14"
        android:paddingBottom="@dimen/d14" />

</androidx.constraintlayout.widget.ConstraintLayout>