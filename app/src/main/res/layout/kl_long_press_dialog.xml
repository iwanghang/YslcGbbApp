<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:background="@color/trans_80_gray">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/d84"
        android:id="@+id/border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/d54"
        android:background="@color/white" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/highPri"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintTop_toTopOf="@id/border"
        app:layout_constraintRight_toLeftOf="@id/openPri"
        app:layout_constraintBottom_toTopOf="@id/lowPri"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="最高价"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/openPri"
        app:layout_constraintLeft_toRightOf="@id/highPri"
        app:layout_constraintTop_toTopOf="@id/highPri"
        app:layout_constraintRight_toLeftOf="@id/volNum"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="开盘价"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/volNum"
        app:layout_constraintLeft_toRightOf="@id/openPri"
        app:layout_constraintTop_toTopOf="@id/openPri"
        app:layout_constraintRight_toRightOf="@id/border"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="成交量"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lowPri"
        app:layout_constraintLeft_toLeftOf="@id/highPri"
        app:layout_constraintTop_toBottomOf="@id/highPri"
        app:layout_constraintRight_toRightOf="@id/highPri"
        app:layout_constraintBottom_toTopOf="@id/time"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="最低价"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/closePri"
        app:layout_constraintLeft_toLeftOf="@id/openPri"
        app:layout_constraintTop_toTopOf="@id/lowPri"
        app:layout_constraintRight_toRightOf="@id/openPri"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="收盘价"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/volCount"
        app:layout_constraintLeft_toLeftOf="@id/volNum"
        app:layout_constraintTop_toTopOf="@id/closePri"
        app:layout_constraintRight_toRightOf="@id/volNum"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="成交额"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintBottom_toBottomOf="@id/border"
        app:layout_constraintTop_toBottomOf="@id/lowPri"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:text="时间" />
</androidx.constraintlayout.widget.ConstraintLayout>