<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/TSelfSubHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TSelfSubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/TSelfSubTime"
        app:layout_constraintLeft_toRightOf="@id/TSelfSubHeadImg"
        app:layout_constraintTop_toTopOf="@id/TSelfSubHeadImg" />

    <TextView
        android:id="@+id/TSelfSubTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/TSelfSubHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/TSelfSubName"
        app:layout_constraintTop_toBottomOf="@id/TSelfSubName" />

    <TextView
        android:id="@+id/TSelfSubTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d14"
        android:background="@drawable/main_teacher_living_state_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/s12"
        app:layout_constraintLeft_toRightOf="@id/TSelfSubName"
        app:layout_constraintTop_toTopOf="@id/TSelfSubName"
        android:text="未开始"
        android:gravity="center"
        android:paddingLeft="@dimen/d28"
        android:paddingTop="@dimen/d2"
        android:paddingBottom="@dimen/d2"
        android:paddingRight="@dimen/d8" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/TSelfSubTagImg"
        app:layout_constraintLeft_toLeftOf="@id/TSelfSubTag"
        app:layout_constraintTop_toTopOf="@id/TSelfSubTag"
        app:layout_constraintBottom_toBottomOf="@id/TSelfSubTag"
        android:layout_marginTop="@dimen/d2"
        android:layout_marginBottom="@dimen/d2"
        android:layout_marginLeft="@dimen/d8"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/wait_img" />

    <TextView
        android:id="@+id/TSelfSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/TSelfSubHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TSelfSubHeadImg" />

    <ImageView
        android:id="@+id/TSelfSubImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintLeft_toLeftOf="@id/TSelfSubHeadImg"
        app:layout_constraintRight_toRightOf="@id/TSelfSubTitle"
        app:layout_constraintTop_toBottomOf="@id/TSelfSubTitle" />

    <ImageView
        android:id="@+id/TSelfSubPlay"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gray_play"
        app:layout_constraintBottom_toBottomOf="@id/TSelfSubImg"
        app:layout_constraintLeft_toLeftOf="@id/TSelfSubImg"
        app:layout_constraintRight_toRightOf="@id/TSelfSubImg"
        app:layout_constraintTop_toTopOf="@id/TSelfSubImg" />

    <View
        android:id="@+id/TSelfSubLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/d2"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TSelfSubImg" />

</androidx.constraintlayout.widget.ConstraintLayout>