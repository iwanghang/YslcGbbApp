<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/FocusTHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FocusTName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d8"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toRightOf="@id/FocusTHeadImg"
        app:layout_constraintTop_toTopOf="@id/FocusTHeadImg" />

    <TextView
        android:id="@+id/FocusTState"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d24"
        android:layout_marginRight="@dimen/d14"
        android:background="@drawable/gray_focus_radius_10_shape"
        android:gravity="center"
        android:text="@string/IsFocus"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/FocusTName" />

    <TextView
        android:id="@+id/FocusTDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintLeft_toLeftOf="@id/FocusTName"
        app:layout_constraintRight_toLeftOf="@id/FocusTState"
        app:layout_constraintTop_toBottomOf="@id/FocusTName" />

    <ImageView
        android:id="@+id/FocusTCodeImg"
        android:layout_width="@dimen/d18"
        android:layout_height="@dimen/d18"
        android:layout_marginTop="@dimen/d8"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/blue_code"
        app:layout_constraintLeft_toLeftOf="@id/FocusTName"
        app:layout_constraintTop_toBottomOf="@id/FocusTDes" />

    <TextView
        android:id="@+id/FocusTCodeTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d2"
        android:text="@string/TagTCode"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/FocusTCodeImg"
        app:layout_constraintLeft_toRightOf="@id/FocusTCodeImg"
        app:layout_constraintTop_toTopOf="@id/FocusTCodeImg" />

    <TextView
        android:id="@+id/FocusTCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s12"
        app:layout_constraintLeft_toRightOf="@id/FocusTCodeTag"
        app:layout_constraintRight_toRightOf="@id/FocusTState"
        app:layout_constraintTop_toTopOf="@id/FocusTCodeTag" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/FocusTLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FocusTCodeImg"
        android:background="@color/gray_eee"
        android:layout_marginTop="@dimen/d14"/>

</androidx.constraintlayout.widget.ConstraintLayout>