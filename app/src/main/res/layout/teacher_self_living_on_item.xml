<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/TSelfLVHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TSelfLVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/TSelfLVTime"
        app:layout_constraintLeft_toRightOf="@id/TSelfLVHeadImg"
        app:layout_constraintTop_toTopOf="@id/TSelfLVHeadImg" />

    <TextView
        android:id="@+id/TSelfLVTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/TSelfLVHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/TSelfLVName"
        app:layout_constraintTop_toBottomOf="@id/TSelfLVName" />

    <TextView
        android:id="@+id/TSelfLVOnLivingTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d14"
        android:background="@drawable/main_teacher_living_state_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/s12"
        app:layout_constraintLeft_toRightOf="@id/TSelfLVName"
        app:layout_constraintTop_toTopOf="@id/TSelfLVName"
        android:text="直播中"
        android:gravity="center"
        android:paddingLeft="@dimen/d28"
        android:paddingTop="@dimen/d2"
        android:paddingBottom="@dimen/d2"
        android:paddingRight="@dimen/d8" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/TSelfLVOnLivingTagImg"
        app:layout_constraintLeft_toLeftOf="@id/TSelfLVOnLivingTag"
        app:layout_constraintTop_toTopOf="@id/TSelfLVOnLivingTag"
        app:layout_constraintBottom_toBottomOf="@id/TSelfLVOnLivingTag"
        android:layout_marginTop="@dimen/d2"
        android:layout_marginBottom="@dimen/d2"
        android:layout_marginLeft="@dimen/d8"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/live_img" />

    <TextView
        android:id="@+id/TSelfLVTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/TSelfLVHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TSelfLVHeadImg" />

    <ImageView
        android:id="@+id/TSelfLVImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintLeft_toLeftOf="@id/TSelfLVHeadImg"
        app:layout_constraintRight_toRightOf="@id/TSelfLVTitle"
        app:layout_constraintTop_toBottomOf="@id/TSelfLVTitle" />

    <ImageView
        android:id="@+id/TSelfLVPlay"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gray_play"
        app:layout_constraintBottom_toBottomOf="@id/TSelfLVImg"
        app:layout_constraintLeft_toLeftOf="@id/TSelfLVImg"
        app:layout_constraintRight_toRightOf="@id/TSelfLVImg"
        app:layout_constraintTop_toTopOf="@id/TSelfLVImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TSelfLVNumber"
        app:layout_constraintRight_toRightOf="@id/TSelfLVTitle"
        app:layout_constraintTop_toBottomOf="@id/TSelfLVImg"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_666"
        android:layout_marginTop="@dimen/d14"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TSelfLVNumberTag"
        app:layout_constraintRight_toLeftOf="@id/TSelfLVNumber"
        app:layout_constraintTop_toTopOf="@id/TSelfLVNumber"
        app:layout_constraintBottom_toBottomOf="@id/TSelfLVNumber"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        android:text="@string/on_line_number" />
    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/TSelfLVNumberImg"
        app:layout_constraintTop_toTopOf="@id/TSelfLVNumberTag"
        app:layout_constraintBottom_toBottomOf="@id/TSelfLVNumberTag"
        app:layout_constraintRight_toLeftOf="@id/TSelfLVNumberTag"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/living_img"
        android:layout_marginRight="@dimen/d4" />

    <View
        android:id="@+id/TSelfLVLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/d2"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TSelfLVNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>