<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <ImageView
        android:layout_width="@dimen/d36"
        android:layout_height="wrap_content"
        android:id="@+id/panqian"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panqian_text"
        android:scaleType="fitCenter"
        android:src="@drawable/panqian_guide"
        android:adjustViewBounds="true"
        app:layout_constraintCircle="@id/panqian_text"
        app:layout_constraintCircleRadius="@dimen/d80"
        app:layout_constraintCircleAngle="240"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/panqian_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/s16"
        android:textColor="@color/white"
        android:text="每日盘前精选3只好股" />

    <TextView
        android:layout_width="@dimen/d90"
        android:layout_height="@dimen/d28"
        android:id="@+id/panqian_know"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="知道了"
        android:textSize="@dimen/s18"
        android:textColor="@color/white"
        android:background="@drawable/white_border_6_shape"
        android:gravity="center"
        app:layout_constraintVertical_bias="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>