<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/LSelfMPicHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LSelfMPicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/LSelfMPicTime"
        app:layout_constraintLeft_toRightOf="@id/LSelfMPicHeadImg"
        app:layout_constraintTop_toTopOf="@id/LSelfMPicHeadImg" />

    <TextView
        android:id="@+id/LSelfMPicTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/LSelfMPicHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/LSelfMPicName"
        app:layout_constraintTop_toBottomOf="@id/LSelfMPicName" />

    <TextView
        android:id="@+id/LSelfMPicTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/LSelfMPicHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSelfMPicHeadImg" />

    <TextView
        android:id="@+id/LSelfMPicDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintLeft_toLeftOf="@id/LSelfMPicTitle"
        app:layout_constraintRight_toRightOf="@id/LSelfMPicTitle"
        app:layout_constraintTop_toBottomOf="@id/LSelfMPicTitle" />

    <com.gzyslczx.yslc.tools.customviews.IGridView
        android:id="@+id/LSelfMPicImgGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d8"
        android:numColumns="3"
        android:verticalSpacing="@dimen/d4"
        android:horizontalSpacing="@dimen/d2"
        app:layout_constraintLeft_toLeftOf="@id/LSelfMPicTitle"
        app:layout_constraintRight_toRightOf="@id/LSelfMPicTitle"
        app:layout_constraintTop_toBottomOf="@id/LSelfMPicDes" />

    <TextView
        android:id="@+id/LSelfMPicPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:text="@string/Praise"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSelfMPicImgGrid" />

    <ImageView
        android:id="@+id/LSelfMPicPraiseImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="@dimen/d2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/LSelfMPicPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/LSelfMPicPraiseNum"
        app:layout_constraintTop_toTopOf="@id/LSelfMPicPraiseNum" />

    <TextView
        android:id="@+id/LSelfMPicShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d36"
        android:text="@string/Share"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/LSelfMPicPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/LSelfMPicPraiseNum"
        app:layout_constraintTop_toTopOf="@id/LSelfMPicPraiseNum" />

    <ImageView
        android:id="@+id/LSelfMPicShareImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="@dimen/d2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gray_share"
        app:layout_constraintBottom_toBottomOf="@id/LSelfMPicShare"
        app:layout_constraintRight_toLeftOf="@id/LSelfMPicShare"
        app:layout_constraintTop_toTopOf="@id/LSelfMPicShare" />

    <View
        android:id="@+id/LSelfMPicLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/d2"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSelfMPicPraiseNum" />

</androidx.constraintlayout.widget.ConstraintLayout>