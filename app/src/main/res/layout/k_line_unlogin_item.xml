<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/KLUnLoginTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        android:lines="2"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLUnLoginRead"
        app:layout_constraintLeft_toLeftOf="@id/KLUnLoginTitle"
        app:layout_constraintTop_toBottomOf="@id/KLUnLoginTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="@dimen/d14"
        android:textSize="@dimen/s12"
        android:textColor="@color/gray_999" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLUnLoginReadTag"
        app:layout_constraintLeft_toRightOf="@id/KLUnLoginRead"
        app:layout_constraintTop_toTopOf="@id/KLUnLoginRead"
        app:layout_constraintBottom_toBottomOf="@id/KLUnLoginRead"
        android:textSize="@dimen/s12"
        android:textColor="@color/gray_999"
        android:text="已阅读"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLUnLoginPrice"
        app:layout_constraintLeft_toRightOf="@id/KLUnLoginReadTag"
        app:layout_constraintTop_toTopOf="@id/KLUnLoginRead"
        app:layout_constraintBottom_toBottomOf="@id/KLUnLoginRead"
        android:textSize="@dimen/s12"
        android:textColor="@color/gray_999"
        android:layout_marginLeft="@dimen/d14"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/KLUnLoginPriceTag"
        app:layout_constraintLeft_toRightOf="@id/KLUnLoginPrice"
        app:layout_constraintTop_toTopOf="@id/KLUnLoginRead"
        app:layout_constraintBottom_toBottomOf="@id/KLUnLoginRead"
        android:textSize="@dimen/s12"
        android:textColor="@color/gray_999"
        android:text="点赞"/>

</androidx.constraintlayout.widget.ConstraintLayout>