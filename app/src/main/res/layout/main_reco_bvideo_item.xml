<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/HVHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HVFocus"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d24"
        android:layout_marginRight="@dimen/d14"
        android:background="@drawable/red_border_focus_radius_10_shape"
        android:gravity="center"
        android:text="@string/AddFocus"
        android:textColor="@color/main_red"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/HVHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/HVHeadImg" />

    <TextView
        android:id="@+id/HVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/HVTime"
        app:layout_constraintLeft_toRightOf="@id/HVHeadImg"
        app:layout_constraintTop_toTopOf="@id/HVHeadImg" />

    <TextView
        android:id="@+id/HVTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/HVHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/HVName"
        app:layout_constraintTop_toBottomOf="@id/HVName" />

    <TextView
        android:id="@+id/HVTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/HVHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HVHeadImg" />

    <ImageView
        android:id="@+id/HVImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="h,2:1"
        app:layout_constraintLeft_toLeftOf="@id/HVHeadImg"
        app:layout_constraintRight_toRightOf="@id/HVTitle"
        app:layout_constraintTop_toBottomOf="@id/HVTitle" />

    <ImageView
        android:id="@+id/HVPlay"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/gray_play"
        app:layout_constraintBottom_toBottomOf="@id/HVImg"
        app:layout_constraintLeft_toLeftOf="@id/HVImg"
        app:layout_constraintRight_toRightOf="@id/HVImg"
        app:layout_constraintTop_toTopOf="@id/HVImg" />

    <TextView
        android:id="@+id/HVPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:text="赞"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HVImg" />

    <ImageView
        android:id="@+id/HVPraiseImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/HVPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/HVPraiseNum"
        app:layout_constraintTop_toTopOf="@id/HVPraiseNum" />

    <TextView
        android:id="@+id/HVShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d36"
        android:text="分享"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/HVPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/HVPraiseNum"
        app:layout_constraintTop_toTopOf="@id/HVPraiseNum" />

    <ImageView
        android:id="@+id/HVShareImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gray_share"
        app:layout_constraintBottom_toBottomOf="@id/HVShare"
        app:layout_constraintRight_toLeftOf="@id/HVShare"
        app:layout_constraintTop_toTopOf="@id/HVShare" />

    <View
        android:id="@+id/HVLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HVPraiseNum" />

</androidx.constraintlayout.widget.ConstraintLayout>