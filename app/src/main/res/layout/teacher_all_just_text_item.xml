<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/tJTextHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tJTextFocus"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d24"
        android:layout_marginRight="@dimen/d14"
        android:background="@drawable/red_border_focus_radius_10_shape"
        android:gravity="center"
        android:text="@string/AddFocus"
        android:textColor="@color/main_red"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tJTextHeadImg" />

    <TextView
        android:id="@+id/tJTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toRightOf="@id/tJTextHeadImg"
        app:layout_constraintRight_toLeftOf="@id/tJTextFocus"
        app:layout_constraintTop_toTopOf="@id/tJTextHeadImg" />

    <TextView
        android:id="@+id/tJTextIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintLeft_toLeftOf="@id/tJTextName"
        app:layout_constraintRight_toRightOf="@id/tJTextName"
        app:layout_constraintTop_toBottomOf="@id/tJTextName" />

    <ImageView
        android:id="@+id/tJTextCodeImg"
        android:layout_width="@dimen/d14"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/blue_code"
        app:layout_constraintLeft_toLeftOf="@id/tJTextName"
        app:layout_constraintTop_toBottomOf="@id/tJTextIntro" />

    <TextView
        android:id="@+id/tJTextCodeTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="@string/TagTCode"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/tJTextCodeImg"
        app:layout_constraintLeft_toRightOf="@id/tJTextCodeImg"
        app:layout_constraintTop_toTopOf="@id/tJTextCodeImg" />

    <TextView
        android:id="@+id/tJTextCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/tJTextCodeTag"
        app:layout_constraintLeft_toRightOf="@id/tJTextCodeTag"
        app:layout_constraintRight_toRightOf="@id/tJTextFocus"
        app:layout_constraintTop_toTopOf="@id/tJTextCodeTag" />

    <TextView
        android:id="@+id/tJTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/tJTextHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tJTextCode" />

    <TextView
        android:id="@+id/tJTextDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintLeft_toLeftOf="@id/tJTextTitle"
        app:layout_constraintRight_toRightOf="@id/tJTextTitle"
        app:layout_constraintTop_toBottomOf="@id/tJTextTitle" />

    <TextView
        android:id="@+id/tJTextPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:text="èµž"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tJTextDes" />

    <ImageView
        android:id="@+id/tJTextPraiseImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/tJTextPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/tJTextPraiseNum"
        app:layout_constraintTop_toTopOf="@id/tJTextPraiseNum" />

    <TextView
        android:id="@+id/tJTextShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d36"
        android:text="@string/Share"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/tJTextPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/tJTextPraiseImg"
        app:layout_constraintTop_toTopOf="@id/tJTextPraiseNum" />

    <ImageView
        android:id="@+id/tJTextShareImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="@dimen/d2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gray_share"
        app:layout_constraintBottom_toBottomOf="@id/tJTextShare"
        app:layout_constraintRight_toLeftOf="@id/tJTextShare"
        app:layout_constraintTop_toTopOf="@id/tJTextShare" />

    <View
        android:id="@+id/tJTextLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tJTextPraiseNum" />

</androidx.constraintlayout.widget.ConstraintLayout>