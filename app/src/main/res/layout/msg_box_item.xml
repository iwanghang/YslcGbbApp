<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:id="@+id/MsgBoxItemHeadImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MsgBoxItemClass"
        app:layout_constraintLeft_toRightOf="@id/MsgBoxItemHeadImg"
        app:layout_constraintTop_toTopOf="@id/MsgBoxItemHeadImg"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        android:layout_marginLeft="@dimen/d8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MsgBoxItemTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/MsgBoxItemClass"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_999"
        android:layout_marginRight="@dimen/d14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MsgBoxItemNum"
        app:layout_constraintRight_toRightOf="@+id/MsgBoxItemTime"
        app:layout_constraintBottom_toBottomOf="@id/MsgBoxItemHeadImg"
        android:textSize="@dimen/s12"
        android:textColor="@color/white"
        android:background="@drawable/red_corner_10_shape"
        android:paddingTop="@dimen/d2"
        android:paddingBottom="@dimen/d2"
        android:paddingLeft="@dimen/d4"
        android:paddingRight="@dimen/d4"
        android:minWidth="@dimen/d24"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/MsgBoxItemDes"
        app:layout_constraintBottom_toBottomOf="@id/MsgBoxItemHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/MsgBoxItemClass"
        app:layout_constraintRight_toLeftOf="@id/MsgBoxItemNum"
        android:layout_marginRight="@dimen/d8"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        android:maxLines="1"
        android:ellipsize="end"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/MsgBoxItemLine"
        app:layout_constraintLeft_toLeftOf="@id/MsgBoxItemClass"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MsgBoxItemHeadImg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_eee" />


</androidx.constraintlayout.widget.ConstraintLayout>