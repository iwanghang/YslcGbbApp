<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="186dp"
    android:background="@color/trans_80_gray">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/d84"
        android:id="@+id/border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/d54"
        android:background="@color/white" />

    <TextView
        android:layout_width="@dimen/d100"
        android:layout_height="wrap_content"
        android:id="@+id/realPri"
        app:layout_constraintLeft_toLeftOf="@id/border"
        app:layout_constraintTop_toTopOf="@id/border"
        app:layout_constraintBottom_toTopOf="@id/dealTime"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        android:textStyle="bold"
        android:text="--"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealTime"
        app:layout_constraintLeft_toLeftOf="@id/realPri"
        app:layout_constraintRight_toRightOf="@id/realPri"
        app:layout_constraintTop_toBottomOf="@id/realPri"
        app:layout_constraintBottom_toBottomOf="@id/border"
        android:textSize="@dimen/s14"
        android:textColor="@color/gray_666"
        android:text="----"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lastPri"
        app:layout_constraintLeft_toRightOf="@id/realPri"
        app:layout_constraintRight_toLeftOf="@id/avePri"
        app:layout_constraintTop_toTopOf="@id/border"
        app:layout_constraintBottom_toTopOf="@id/diffPri"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s12"
        android:text="昨收价" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/avePri"
        app:layout_constraintLeft_toRightOf="@id/lastPri"
        app:layout_constraintRight_toLeftOf="@id/volNum"
        app:layout_constraintTop_toTopOf="@id/lastPri"
        android:textSize="@dimen/s12"
        android:textColor="@color/black_333"
        android:text="均价" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/volNum"
        app:layout_constraintLeft_toRightOf="@id/avePri"
        app:layout_constraintRight_toRightOf="@id/border"
        app:layout_constraintTop_toTopOf="@id/avePri"
        android:textSize="@dimen/s12"
        android:textColor="@color/black_333"
        android:text="成交量" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/diffPri"
        app:layout_constraintLeft_toLeftOf="@id/lastPri"
        app:layout_constraintTop_toBottomOf="@id/lastPri"
        app:layout_constraintBottom_toBottomOf="@id/border"
        app:layout_constraintRight_toRightOf="@id/lastPri"
        android:textSize="@dimen/s12"
        android:textColor="@color/black_333"
        android:text="涨跌值" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/diffGain"
        app:layout_constraintLeft_toLeftOf="@id/avePri"
        app:layout_constraintTop_toTopOf="@id/diffPri"
        app:layout_constraintRight_toRightOf="@id/avePri"
        android:textSize="@dimen/s12"
        android:textColor="@color/black_333"
        android:text="涨跌幅" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/volCount"
        app:layout_constraintLeft_toLeftOf="@id/volNum"
        app:layout_constraintTop_toTopOf="@id/diffGain"
        app:layout_constraintRight_toRightOf="@id/volNum"
        android:textSize="@dimen/s12"
        android:textColor="@color/black_333"
        android:text="成交额" />

</androidx.constraintlayout.widget.ConstraintLayout>