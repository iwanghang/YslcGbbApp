<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d28"
        android:id="@+id/MdetailTime"
        android:textSize="@dimen/s10"
        android:textColor="@color/black_333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/MdetailPrice"
        android:gravity="center"
        android:text="时间"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/MdetailPrice"
        android:textSize="@dimen/s10"
        android:textColor="@color/gray_666"
        android:text="价格"
        app:layout_constraintLeft_toRightOf="@id/MdetailTime"
        app:layout_constraintTop_toTopOf="@id/MdetailTime"
        app:layout_constraintRight_toLeftOf="@id/MdetailVolue"
        app:layout_constraintBottom_toBottomOf="@id/MdetailTime"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/MdetailVolue"
        android:textSize="@dimen/s10"
        android:textColor="@color/gray_666"
        android:text="成交量"
        app:layout_constraintLeft_toRightOf="@id/MdetailPrice"
        app:layout_constraintTop_toTopOf="@id/MdetailTime"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/MdetailTime"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>