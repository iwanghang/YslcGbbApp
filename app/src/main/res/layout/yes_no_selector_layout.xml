<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d160">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SelectorTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/s18"
        android:textColor="@color/black_333"
        android:text="欢迎使用股扒扒"
        android:visibility="gone"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/SelectorMessage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SelectorTitle"
        app:layout_constraintBottom_toTopOf="@id/SelectorLine"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="内容"
        android:gravity="center_horizontal"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/SelectorLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/SelectorLine1"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_eee" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/SelectorYes"
        app:layout_constraintLeft_toRightOf="@id/SelectorLine1"
        app:layout_constraintTop_toTopOf="@id/SelectorLine1"
        app:layout_constraintBottom_toBottomOf="@id/SelectorLine1"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/s16"
        android:textColor="@color/gray_666"
        android:text="是的"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/SelectorNo"
        app:layout_constraintRight_toLeftOf="@id/SelectorLine1"
        app:layout_constraintTop_toTopOf="@id/SelectorYes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/SelectorYes"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s16"
        android:text="取消"
        android:gravity="center"/>

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/d36"
        android:id="@+id/SelectorLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray_F7" />

</androidx.constraintlayout.widget.ConstraintLayout>