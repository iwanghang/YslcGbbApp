<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/OnLivingImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:minHeight="@dimen/d80"/>

    <TextView
        android:id="@+id/OnLivingTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d6"
        android:layout_marginTop="@dimen/d6"
        android:background="@drawable/main_teacher_living_state_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/s10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="直播中"
        android:gravity="center"
        android:paddingLeft="@dimen/d20"
        android:paddingTop="@dimen/d2"
        android:paddingBottom="@dimen/d2"
        android:paddingRight="@dimen/d4" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/OnLivingTagImg"
        app:layout_constraintLeft_toLeftOf="@id/OnLivingTag"
        app:layout_constraintTop_toTopOf="@id/OnLivingTag"
        app:layout_constraintBottom_toBottomOf="@id/OnLivingTag"
        android:layout_marginTop="@dimen/d2"
        android:layout_marginBottom="@dimen/d2"
        android:layout_marginLeft="@dimen/d4"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/live_img" />


</androidx.constraintlayout.widget.ConstraintLayout>