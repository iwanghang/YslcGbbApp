<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/VVHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/VVFocus"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d24"
        android:layout_marginRight="@dimen/d14"
        android:background="@drawable/red_border_focus_radius_10_shape"
        android:gravity="center"
        android:text="@string/AddFocus"
        android:textColor="@color/main_red"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/VVHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/VVHeadImg" />

    <TextView
        android:id="@+id/VVName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/VVTime"
        app:layout_constraintLeft_toRightOf="@id/VVHeadImg"
        app:layout_constraintTop_toTopOf="@id/VVHeadImg" />

    <TextView
        android:id="@+id/VVTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/VVHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/VVName"
        app:layout_constraintTop_toBottomOf="@id/VVName" />

    <TextView
        android:id="@+id/VVTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/VVHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VVHeadImg" />

    <ImageView
        android:id="@+id/VVImg"
        android:layout_width="@dimen/d168"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="h,0.8:1"
        app:layout_constraintLeft_toLeftOf="@id/VVHeadImg"
        app:layout_constraintTop_toBottomOf="@id/VVTitle" />

    <ImageView
        android:id="@+id/HVPlay"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/white_play"
        app:layout_constraintRight_toRightOf="@id/VVImg"
        app:layout_constraintTop_toTopOf="@id/VVImg" />

    <TextView
        android:id="@+id/VVPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:text="赞"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VVImg" />

    <ImageView
        android:id="@+id/VVPraiseImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/VVPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/VVPraiseNum"
        app:layout_constraintTop_toTopOf="@id/VVPraiseNum" />

    <TextView
        android:id="@+id/VVShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d36"
        android:text="分享"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/VVPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/VVPraiseNum"
        app:layout_constraintTop_toTopOf="@id/VVPraiseNum" />

    <ImageView
        android:id="@+id/VVShareImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gray_share"
        app:layout_constraintBottom_toBottomOf="@id/VVShare"
        app:layout_constraintRight_toLeftOf="@id/VVShare"
        app:layout_constraintTop_toTopOf="@id/VVShare" />

    <View
        android:id="@+id/VVLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VVPraiseNum" />

</androidx.constraintlayout.widget.ConstraintLayout>