<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/KLArtRecLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:background="@color/gray_eee"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/KLArtRecTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d18"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/KLArtRecLine"
        app:layout_constraintRight_toRightOf="@id/KLArtRecLine"
        app:layout_constraintTop_toBottomOf="@id/KLArtRecLine" />

    <ImageView
        android:id="@+id/KLArtRecReadImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d16"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginBottom="6dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/read_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/KLArtRecTitle"
        app:layout_constraintTop_toBottomOf="@id/KLArtRecTitle" />

    <TextView
        android:id="@+id/KLArtRecReadNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/KLArtRecReadImg"
        app:layout_constraintLeft_toRightOf="@id/KLArtRecReadImg"
        app:layout_constraintTop_toTopOf="@id/KLArtRecReadImg" />

    <ImageView
        android:id="@+id/KLArtRecPraiseImg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d16"
        android:layout_marginLeft="@dimen/d36"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/KLArtRecReadImg"
        app:layout_constraintLeft_toRightOf="@id/KLArtRecReadNum"
        app:layout_constraintTop_toTopOf="@id/KLArtRecReadImg" />

    <TextView
        android:id="@+id/KLArtRecPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/KLArtRecPraiseImg"
        app:layout_constraintLeft_toRightOf="@id/KLArtRecPraiseImg"
        app:layout_constraintTop_toTopOf="@id/KLArtRecPraiseImg" />

</androidx.constraintlayout.widget.ConstraintLayout>