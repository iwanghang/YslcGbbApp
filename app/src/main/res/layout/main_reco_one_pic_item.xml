<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/APicHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/APicFocus"
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d24"
        android:layout_marginRight="@dimen/d14"
        android:background="@drawable/red_border_focus_radius_10_shape"
        android:gravity="center"
        android:text="@string/AddFocus"
        android:textColor="@color/main_red"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/APicHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/APicHeadImg" />

    <TextView
        android:id="@+id/APicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/APicTime"
        app:layout_constraintLeft_toRightOf="@id/APicHeadImg"
        app:layout_constraintTop_toTopOf="@id/APicHeadImg" />

    <TextView
        android:id="@+id/APicTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/APicHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/APicName"
        app:layout_constraintTop_toBottomOf="@id/APicName" />

    <TextView
        android:id="@+id/APicTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/APicHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/APicHeadImg" />

    <TextView
        android:id="@+id/APicDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintLeft_toLeftOf="@id/APicTitle"
        app:layout_constraintRight_toRightOf="@id/APicTitle"
        app:layout_constraintTop_toBottomOf="@id/APicTitle" />

    <ImageView
        android:id="@+id/APicImg"
        android:layout_width="@dimen/d168"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@id/APicHeadImg"
        app:layout_constraintTop_toBottomOf="@id/APicDes" />

    <TextView
        android:id="@+id/APicPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:text="èµž"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/APicImg" />

    <ImageView
        android:id="@+id/APicPraiseImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="@dimen/d2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/APicPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/APicPraiseNum"
        app:layout_constraintTop_toTopOf="@id/APicPraiseNum" />

    <TextView
        android:id="@+id/APicShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d36"
        android:text="@string/Share"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/APicPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/APicPraiseNum"
        app:layout_constraintTop_toTopOf="@id/APicPraiseNum" />

    <ImageView
        android:id="@+id/APicShareImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="@dimen/d2"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gray_share"
        app:layout_constraintBottom_toBottomOf="@id/APicShare"
        app:layout_constraintRight_toLeftOf="@id/APicShare"
        app:layout_constraintTop_toTopOf="@id/APicShare" />

    <View
        android:id="@+id/APicLine"
        android:layout_width="0dp"
        android:layout_height="@dimen/d2"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/APicPraiseNum" />

</androidx.constraintlayout.widget.ConstraintLayout>