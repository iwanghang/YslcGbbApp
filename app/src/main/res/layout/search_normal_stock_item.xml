<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/StockName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/StockCode"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginBottom="@dimen/d14"
        android:layout_marginLeft="@dimen/d14"
        android:gravity="left" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/StockOption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/StockName"
        app:layout_constraintBottom_toBottomOf="@id/StockName"
        android:textSize="@dimen/s14"
        android:textColor="@color/main_red"
        android:background="@drawable/red_border_focus_radius_10_shape"
        android:text="加自选"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:layout_marginRight="@dimen/d14" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/StockCode"
        app:layout_constraintLeft_toRightOf="@id/StockName"
        app:layout_constraintRight_toLeftOf="@id/StockOption"
        app:layout_constraintTop_toTopOf="@id/StockName"
        app:layout_constraintBottom_toBottomOf="@id/StockName"
        android:gravity="left"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333" />

</androidx.constraintlayout.widget.ConstraintLayout>