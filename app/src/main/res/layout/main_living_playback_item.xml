<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/OnLivePlayBackImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="2:1"/>

    <TextView
        android:id="@+id/OnLivePlayBackTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/main_teacher_living_state_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/s18"
        app:layout_constraintLeft_toLeftOf="@id/OnLivePlayBackImg"
        app:layout_constraintTop_toTopOf="@id/OnLivePlayBackImg"
        android:text="回放"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="8dp"
        android:paddingLeft="@dimen/d36"/>

    <ImageView
        android:id="@+id/OnLivePlayBackTagImg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/replay_img"
        app:layout_constraintBottom_toBottomOf="@id/OnLivePlayBackTag"
        app:layout_constraintLeft_toLeftOf="@id/OnLivePlayBackTag"
        app:layout_constraintTop_toTopOf="@id/OnLivePlayBackTag" />

    <TextView
        android:id="@+id/OnLivePlayBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/red_radius_8_shape"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingTop="2dp"
        android:paddingRight="12dp"
        android:paddingBottom="2dp"
        android:text="播放"
        android:textColor="@color/white"
        android:textSize="@dimen/s18"
        app:layout_constraintBottom_toBottomOf="@id/OnLivePlayBackImg"
        app:layout_constraintLeft_toLeftOf="@id/OnLivePlayBackTag"
        android:visibility="gone"/>

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:id="@+id/OnLivePlayBackLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/OnLivePlayBackImg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7" />


</androidx.constraintlayout.widget.ConstraintLayout>