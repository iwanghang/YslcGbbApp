<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_F8F8F8">

    <ImageView
        android:layout_width="@dimen/d54"
        android:layout_height="@dimen/d54"
        android:id="@+id/MineHeadImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/d14"
        android:scaleType="centerCrop"
        android:src="@drawable/def_headimg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MineName"
        app:layout_constraintLeft_toRightOf="@id/MineHeadImg"
        app:layout_constraintTop_toTopOf="@id/MineHeadImg"
        app:layout_constraintBottom_toTopOf="@id/MinePhone"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        android:layout_marginLeft="@dimen/d14"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/ClickLogin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MinePhone"
        app:layout_constraintLeft_toLeftOf="@id/MineName"
        app:layout_constraintBottom_toBottomOf="@id/MineHeadImg"
        app:layout_constraintTop_toBottomOf="@id/MineName"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s12"
        android:visibility="gone" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/d260"
        android:id="@+id/MineBg"
        app:layout_constraintLeft_toLeftOf="@id/MineHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MineHeadImg"
        android:layout_marginRight="@dimen/d14"
        android:layout_marginTop="@dimen/d20"
        android:background="@drawable/white_radius_10_shape" />

    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/MineMsgImg"
        app:layout_constraintLeft_toLeftOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineBg"
        app:layout_constraintBottom_toTopOf="@id/MineAboutImg"
        android:layout_marginLeft="@dimen/d14"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mine_msg" />

    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/MineAboutImg"
        app:layout_constraintLeft_toLeftOf="@id/MineMsgImg"
        app:layout_constraintTop_toBottomOf="@id/MineMsgImg"
        app:layout_constraintBottom_toTopOf="@id/MineUpdateImg"
        android:scaleType="fitCenter"
        android:src="@drawable/mine_about"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/MineUpdateImg"
        app:layout_constraintLeft_toLeftOf="@id/MineAboutImg"
        app:layout_constraintTop_toBottomOf="@id/MineAboutImg"
        app:layout_constraintBottom_toTopOf="@id/MineSuggestImg"
        android:scaleType="fitCenter"
        android:src="@drawable/mine_update"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/MineSuggestImg"
        app:layout_constraintLeft_toLeftOf="@id/MineUpdateImg"
        app:layout_constraintTop_toBottomOf="@id/MineUpdateImg"
        app:layout_constraintBottom_toTopOf="@id/MineLockImg"
        android:scaleType="fitCenter"
        android:src="@drawable/mine_suggest"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/MineLockImg"
        app:layout_constraintLeft_toLeftOf="@id/MineSuggestImg"
        app:layout_constraintTop_toBottomOf="@id/MineSuggestImg"
        app:layout_constraintBottom_toTopOf="@id/MineRiskImg"
        android:scaleType="fitCenter"
        android:src="@drawable/lock_img"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:id="@+id/MineRiskImg"
        app:layout_constraintLeft_toLeftOf="@id/MineLockImg"
        app:layout_constraintTop_toBottomOf="@id/MineLockImg"
        app:layout_constraintBottom_toBottomOf="@id/MineBg"
        android:scaleType="fitCenter"
        android:src="@drawable/risk_test"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="@dimen/d14"
        android:id="@+id/MineMsgRightImg"
        app:layout_constraintRight_toRightOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineMsgImg"
        app:layout_constraintBottom_toBottomOf="@id/MineMsgImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mine_right"
        android:layout_marginRight="@dimen/d14" />

    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="@dimen/d14"
        android:id="@+id/MineAboutRightImg"
        app:layout_constraintRight_toRightOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineAboutImg"
        app:layout_constraintBottom_toBottomOf="@id/MineAboutImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mine_right"
        android:layout_marginRight="@dimen/d14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d14"
        android:id="@+id/MineUpdateRightImg"
        app:layout_constraintRight_toRightOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineUpdateImg"
        app:layout_constraintBottom_toBottomOf="@id/MineUpdateImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/new_version"
        android:layout_marginRight="@dimen/d14"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="@dimen/d14"
        android:id="@+id/MineSuggestRightImg"
        app:layout_constraintRight_toRightOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineSuggestImg"
        app:layout_constraintBottom_toBottomOf="@id/MineSuggestImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mine_right"
        android:layout_marginRight="@dimen/d14" />

    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="@dimen/d14"
        android:id="@+id/MineLockRightImg"
        app:layout_constraintRight_toRightOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineLockImg"
        app:layout_constraintBottom_toBottomOf="@id/MineLockImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mine_right"
        android:layout_marginRight="@dimen/d14" />

    <ImageView
        android:layout_width="@dimen/d14"
        android:layout_height="@dimen/d14"
        android:id="@+id/MineRiskRightImg"
        app:layout_constraintRight_toRightOf="@id/MineBg"
        app:layout_constraintTop_toTopOf="@id/MineRiskImg"
        app:layout_constraintBottom_toBottomOf="@id/MineRiskImg"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/mine_right"
        android:layout_marginRight="@dimen/d14" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d24"
        android:id="@+id/MineMsgText"
        app:layout_constraintLeft_toRightOf="@id/MineMsgImg"
        app:layout_constraintTop_toTopOf="@id/MineMsgImg"
        app:layout_constraintBottom_toBottomOf="@id/MineMsgImg"
        app:layout_constraintRight_toLeftOf="@id/MineMsgRightImg"
        android:paddingLeft="@dimen/d14"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:text="消息中心"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d24"
        android:id="@+id/MineAboutText"
        app:layout_constraintLeft_toLeftOf="@id/MineMsgText"
        app:layout_constraintTop_toTopOf="@id/MineAboutImg"
        app:layout_constraintBottom_toBottomOf="@id/MineAboutImg"
        app:layout_constraintRight_toRightOf="@id/MineMsgText"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:text="关于我们"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d14"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d24"
        android:id="@+id/MineUpdateText"
        app:layout_constraintLeft_toLeftOf="@id/MineMsgText"
        app:layout_constraintRight_toRightOf="@id/MineMsgText"
        app:layout_constraintTop_toTopOf="@id/MineUpdateImg"
        app:layout_constraintBottom_toBottomOf="@id/MineUpdateImg"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:text="检查更新"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d14"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d24"
        android:id="@+id/MineSuggestText"
        app:layout_constraintLeft_toLeftOf="@id/MineMsgText"
        app:layout_constraintRight_toRightOf="@id/MineMsgText"
        app:layout_constraintTop_toTopOf="@id/MineSuggestImg"
        app:layout_constraintBottom_toBottomOf="@id/MineSuggestImg"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:text="产品建议"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MineVersion"
        app:layout_constraintRight_toLeftOf="@id/MineUpdateRightImg"
        app:layout_constraintTop_toTopOf="@id/MineUpdateImg"
        app:layout_constraintBottom_toBottomOf="@id/MineUpdateImg"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14"
        android:layout_marginRight="@dimen/s14"
        android:visibility="gone"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d24"
        android:id="@+id/MineLockText"
        app:layout_constraintLeft_toLeftOf="@id/MineMsgText"
        app:layout_constraintRight_toRightOf="@id/MineMsgText"
        app:layout_constraintTop_toTopOf="@id/MineLockImg"
        app:layout_constraintBottom_toBottomOf="@id/MineLockImg"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:text="隐私设置"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d14"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d24"
        android:id="@+id/MineRiskText"
        app:layout_constraintLeft_toLeftOf="@id/MineMsgText"
        app:layout_constraintRight_toRightOf="@id/MineMsgText"
        app:layout_constraintTop_toTopOf="@id/MineRiskImg"
        app:layout_constraintBottom_toBottomOf="@id/MineRiskImg"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:text="风险测评"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d14"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/d44"
        android:id="@+id/MineCancelLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MineBg"
        android:layout_marginTop="@dimen/d36"
        android:background="@color/white"
        android:textSize="@dimen/s16"
        android:textColor="@color/main_red"
        android:text="退出登录"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MineMsgNum"
        app:layout_constraintRight_toLeftOf="@id/MineMsgRightImg"
        app:layout_constraintTop_toTopOf="@id/MineMsgText"
        app:layout_constraintBottom_toBottomOf="@id/MineMsgText"
        android:textSize="@dimen/s12"
        android:textColor="@color/white"
        android:background="@drawable/red_corner_10_shape"
        android:layout_marginRight="@dimen/d14"
        android:paddingTop="@dimen/d2"
        android:paddingBottom="@dimen/d2"
        android:paddingLeft="@dimen/d4"
        android:paddingRight="@dimen/d4"
        android:minWidth="@dimen/d24"
        android:gravity="center"
        android:visibility="gone"/>

    <ProgressBar
        android:layout_width="@dimen/d36"
        android:layout_height="@dimen/d36"
        android:id="@+id/MineLoad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>