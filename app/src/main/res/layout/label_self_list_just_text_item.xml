<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/LSelfJTextHeadImg"
        android:layout_width="@dimen/d44"
        android:layout_height="@dimen/d44"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LSelfJTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintBottom_toTopOf="@id/LSelfJTextTime"
        app:layout_constraintLeft_toRightOf="@id/LSelfJTextHeadImg"
        app:layout_constraintTop_toTopOf="@id/LSelfJTextHeadImg" />

    <TextView
        android:id="@+id/LSelfJTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s12"
        app:layout_constraintBottom_toBottomOf="@id/LSelfJTextHeadImg"
        app:layout_constraintLeft_toLeftOf="@id/LSelfJTextName"
        app:layout_constraintTop_toBottomOf="@id/LSelfJTextName" />

    <TextView
        android:id="@+id/LSelfJTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s16"
        app:layout_constraintLeft_toLeftOf="@id/LSelfJTextHeadImg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSelfJTextHeadImg" />

    <TextView
        android:id="@+id/LSelfJTextDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray_666"
        android:textSize="@dimen/s14"
        app:layout_constraintLeft_toLeftOf="@id/LSelfJTextTitle"
        app:layout_constraintRight_toRightOf="@id/LSelfJTextTitle"
        app:layout_constraintTop_toBottomOf="@id/LSelfJTextTitle" />

    <TextView
        android:id="@+id/LSelfJTextPraiseNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d14"
        android:layout_marginRight="@dimen/d14"
        android:text="@string/Praise"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSelfJTextDes" />

    <ImageView
        android:id="@+id/LSelfJTextPraiseImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/un_praise"
        app:layout_constraintBottom_toBottomOf="@id/LSelfJTextPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/LSelfJTextPraiseNum"
        app:layout_constraintTop_toTopOf="@id/LSelfJTextPraiseNum" />

    <TextView
        android:id="@+id/LSelfJTextShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d36"
        android:text="@string/Share"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/s14"
        app:layout_constraintBottom_toBottomOf="@id/LSelfJTextPraiseNum"
        app:layout_constraintRight_toLeftOf="@id/LSelfJTextPraiseImg"
        app:layout_constraintTop_toTopOf="@id/LSelfJTextPraiseNum" />

    <ImageView
        android:id="@+id/LSelfJTextShareImg"
        android:layout_width="@dimen/d16"
        android:layout_height="@dimen/d16"
        android:layout_marginRight="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gray_share"
        app:layout_constraintBottom_toBottomOf="@id/LSelfJTextShare"
        app:layout_constraintRight_toLeftOf="@id/LSelfJTextShare"
        app:layout_constraintTop_toTopOf="@id/LSelfJTextShare" />

    <View
        android:id="@+id/LSelfJTextLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/d14"
        android:background="@color/gray_F7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LSelfJTextPraiseNum" />

</androidx.constraintlayout.widget.ConstraintLayout>