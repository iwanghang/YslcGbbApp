<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TradeLevelFundName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/d14"
        android:layout_marginTop="8dp"
        android:textColor="@color/black_333"
        android:textSize="@dimen/s14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d14"
        android:id="@+id/TradeLevelFundImg"
        app:layout_constraintTop_toTopOf="@id/TradeLevelFundName"
        app:layout_constraintBottom_toBottomOf="@id/TradeLevelFundName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/d14"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/gou"
        android:visibility="gone"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/TradeLevelFundLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TradeLevelFundName"
        android:layout_marginTop="8dp"
        android:background="@color/gray_eee" />

</androidx.constraintlayout.widget.ConstraintLayout>