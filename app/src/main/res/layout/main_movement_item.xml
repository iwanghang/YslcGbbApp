<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/MovementStockName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/MovementMarketValue"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:paddingTop="@dimen/d6"
        android:paddingBottom="@dimen/d6"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/MovementMarketValue"
        app:layout_constraintLeft_toRightOf="@id/MovementStockName"
        app:layout_constraintTop_toTopOf="@id/MovementStockName"
        app:layout_constraintBottom_toBottomOf="@id/MovementStockName"
        app:layout_constraintRight_toLeftOf="@id/MovementRatio"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/MovementRatio"
        app:layout_constraintLeft_toRightOf="@id/MovementMarketValue"
        app:layout_constraintTop_toTopOf="@id/MovementStockName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/MovementStockName"
        android:textSize="@dimen/s14"
        android:textColor="@color/black_333"
        android:gravity="center"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:id="@+id/MovementLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/MovementStockName"
        android:background="@color/gray_e6" />

</androidx.constraintlayout.widget.ConstraintLayout>